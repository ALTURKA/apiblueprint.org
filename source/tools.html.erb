---
title: API Blueprint Tools
---


    <div id="tools-search" class="row">
        <input type="search" placeholder="Search Tooling" />
    </div>
    <div id="filters" class="row">
        <ul class="nav nav-pills">
            <li class="active"><a href="/tools.html">Tools</a>
            
            <% tools.keys.each do |category| %>
                <li><a href="#<%= category %>"><%= category.capitalize %></a></li>
            <% end %>
        </ul>
    </div>

    <div role="main">
      <% tools.each do |category,tools| %>
        <div>
        <% tools.each do |tool| %>
          <div class="row tool">
            <div class="col-md-5">
                <h3><a href="<%= tool.url %>"><%= tool.name %></a></h3>
                <span class="label label-default"><%= tool.category %></span>
            </div>
            <div class="col-md-7 summary">
                <p><%= tool.summary %></p>
            </div>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>

